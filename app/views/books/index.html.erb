<% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
<% end %>

<div class='body'>
      <div class='container'>

        <p id="notice"></p>


        <div class='row'>
  <div class='col-xs-3'>
    <h2>User info</h2>
    <table class='table'>
      <tr><%= attachment_image_tag @user, :profile_image, format: 'jpeg', class: " pull-left profile-img", fallback: "no_image.jpg",size:'100x100' %></tr>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
</table>

<div class='row'>
        <p><%= link_to "", edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>
</div>

    <h2>New book</h2>
<%= form_for(@book) do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title, class:'col-xs-12' %>

  <h4>Opinion</h4>
  <%= f.text_area :body,class:'text col-xs-12' %>

  <%= f.submit 'Create Book', class:'btn btn-primary col-xs-12' %>

<% end %>

  </div>

  <div class='col-xs-9'>
    <h2>Books</h2>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>&nbsp;</th>
      <th><b>Title</b></th>
      <th><b>Opinion</b></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= attachment_image_tag @user, :profile_image,  format: 'jpeg', class: " pull-left profile-img", fallback: "no_image.jpg",size:'30x30' %></td>
      <td><%= link_to book.title ,book_path(book) %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>
      </div>
    </div>