
<!DOCTYPE html>
<html>
  <head>
    <title class=>Bookers</title>
    <%= csp_meta_tag %>
    <%= csrf_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
    <div class="container">
      <div class="row">
    <header class="navbar navbar-fixed-top navbar-inverse">
    <nav class='nav navbar-nav navbar-left' >
      <span class="logo col-lg-4">Bookers</span>
    </nav>
    <nav>
     <ul class="nav navbar-nav navbar-right col-lg-3">
        <% if user_signed_in? %>
        <%= link_to(user_path(current_user.id)) do %>
        <span class="glyphicon glyphicon-home home"> Home</span>
        <% end %>
        <%= link_to(users_path) do %>
        <span class="glyphicon glyphicon-user users"> Users</span>
        <% end %>
        <%= link_to(books_path) do %>
        <span class="glyphicon glyphicon-book books"> Books</span>
        <% end %>
        <%= link_to(destroy_user_session_path, method: :delete) do %>
        <span class="glyphicon glyphicon-log-out logout"> logout</span>
        <% end %>
      <% else %>
      <%= link_to(root_path) do %>
        <span class="glyphicon glyphicon-home"> Home</span>
      <% end %>
      <%= link_to(home_about_path) do %>
        <span class="glyphicon glyphicon-link about white"> About</span>
      <% end %>
      <%= link_to(new_user_registration_path) do %>
        <span class="glyphicon glyphicon-edit sign_up"> sign up</span>
      <% end %>
      <%= link_to(new_user_session_path) do %>
        <span class="glyphicon glyphicon-log-in sign_in"> login</span>
      <% end %>
    <% end %>
     </ul>
    </nav>

    </header>
    </div>
<%= yield %>
    <footer>
    <div class='row'>
      <div class='col-xs-3 col-xs-offset-9'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>
  </div>


  </body>
</html>
